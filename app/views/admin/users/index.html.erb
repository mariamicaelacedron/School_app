<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestión de Usuarios</h1>
    <%= link_to 'Invitar Nuevo Usuario', new_admin_user_path, class: 'btn btn-primary' %>
  </div>

  <div class="card shadow">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="thead-light">
            <tr>
              <th>Email</th>
              <th>Nombre</th>
              <th>Rol</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td><%= user.name || 'Sin nombre' %></td>
                <td><%= user.role %></td>
                <td>
                  <% if user.invitation_accepted? %>
                    <span class="badge badge-success">Activo</span>
                  <% elsif user.invitation_sent_at %>
                    <span class="badge badge-warning">Invitación pendiente</span>
                  <% else %>
                    <span class="badge badge-secondary">Sin invitar</span>
                  <% end %>
                </td>
                <td>
                  <% if user.invitation_sent_at && !user.invitation_accepted? %>
                    <%= link_to 'Reenviar invitación', resend_invitation_admin_user_path(user), 
                                method: :post, class: 'btn btn-sm btn-outline-primary' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>