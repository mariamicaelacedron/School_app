<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestión de Usuarios</h1>
    <%= link_to 'Invitar Nuevo Usuario', new_admin_user_path, class: 'btn btn-primary' %>
  </div>

  <div class="card shadow">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Email</th>
              <th>Nombre</th>
              <th>Rol</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td><%= user.name || 'Sin nombre' %></td>
                <td><span class="badge bg-info text-dark"><%= user.role %></span></td>
                <td>
                  <% if user.invitation_accepted? %>
                    <span class="badge rounded-pill bg-success p-2">
                      <i class="bi bi-check-circle-fill me-1"></i> Activo
                    </span>
                  <% elsif user.invitation_sent_at %>
                    <span class="badge rounded-pill bg-warning text-dark p-2">
                      <i class="bi bi-clock-history me-1"></i> Pendiente
                    </span>
                  <% else %>
                    <span class="badge rounded-pill bg-secondary p-2">
                      <i class="bi bi-envelope me-1"></i> Sin invitar
                    </span>
                  <% end %>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <% if user.invitation_sent_at && !user.invitation_accepted? %>
                      <%= link_to resend_invitation_admin_user_path(user), 
                                  method: :post, 
                                  class: 'btn btn-sm btn-outline-primary rounded-pill',
                                  data: { turbo_method: :post, confirm: '¿Reenviar invitación?' } do %>
                        <i class="bi bi-send"></i> Reenviar
                      <% end %>
                    <% end %>
                    
                    <%= button_to admin_user_path(user), 
                                method: :delete, 
                                class: 'btn btn-sm btn-outline-danger rounded-pill',
                                data: { turbo_confirm: '¿Estás seguro de eliminar este usuario?' } do %>
                      <i class="bi bi-trash"></i> Eliminar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>