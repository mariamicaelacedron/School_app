<div class="container mt-4">
  <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
    <h1 class="h3 mb-3 mb-sm-0">Calificaciones</h1>
    <%= link_to 'Nueva Calificación', new_admin_grade_path, class: 'btn btn-primary  w-sm-auto' %>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: admin_grades_path, method: :get, local: true, class: "row g-2 g-sm-3" do |f| %>
        <div class="col-12 col-md-8">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar por nombre o email..." %>
        </div>
        <div class="col-6 col-md-2">
          <%= submit_tag "Buscar", class: "btn btn-primary w-100" %>
        </div>
        <div class="col-6 col-md-2">
          <%= link_to "Limpiar", admin_grades_path, class: "btn btn-outline-secondary w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>Estudiante</th>
          <th>Email</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if @users.any? %>
          <% @users.each do |user| %>
            <% sample_grade = user.grades_received.first %>
            <tr>
              <td>
                <% if user.name.present? && user.name != user.email %>
                  <%= user.name %>
                <% else %>
                  <span class="text-muted"><%= user.email %></span>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td>
                <div class="d-flex flex-wrap gap-2">
                  <% if sample_grade %>
                    <%= link_to admin_grade_path(sample_grade), class: 'btn btn-sm btn-outline-primary' do %>
                      <i class="bi bi-eye-fill"></i> Ver
                    <% end %>
                  <% end %>
                  <%= link_to new_admin_grade_path(user_id: user.id), class: 'btn btn-sm btn-success' do %>
                    <i class="bi bi-plus-circle-fill"></i> Agregar
                  <% end %>
                  <% if sample_grade %>
                    <%= button_to 'Eliminar', admin_grade_path(sample_grade), 
                        method: :delete, 
                        form: { data: { turbo_confirm: '¿Eliminar todas las calificaciones de este estudiante?' } },
                        class: 'btn btn-sm btn-outline-danger' %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="text-center">
              <% if params[:search].present? %>
                No se encontraron estudiantes con ese criterio.
              <% else %>
                No hay estudiantes registrados.
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
