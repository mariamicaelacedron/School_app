<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Calificaciones de <%= @grades.first&.student_name %></h1>
    <% if @grades.any? %>
      <%= link_to 'Agregar Nueva Nota', new_admin_grade_path(user_id: @grades.first.user_id), class: 'btn btn-primary' %>
    <% end %>
  </div>

  <% if @grades.any? %>
    <div class="card">
      <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
          <%= @grades.first.student_name %> (<%= @grades.first.user.email %>)
        </h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>Asignatura</th>
                <th>Nota</th>
                <th>Comentario</th>
                <th>Profesor</th>
                <th>Fecha</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @grades.each do |grade| %>
                <tr>
                  <td><%= grade.subject %></td>
                  <td class="<%= grade.score < 5 ? 'text-danger' : 'text-success' %> fw-bold">
                    <%= grade.score %>
                  </td>
                  <td><%= grade.comment %></td>
                  <td><%= grade.admin.email %></td>
                  <td><%= grade.created_at.strftime("%d/%m/%Y") %></td>
                  <td>
                    <%= link_to edit_admin_grade_path(grade), class: 'btn btn-sm btn-primary me-1' do %>
                      <i class="bi bi-pencil"></i> Editar
                    <% end %>
                    <%= button_to admin_grade_path(grade), 
                                method: :delete,
                                form: { data: { confirm: '¿Eliminar esta calificación?' } },
                                class: 'btn btn-sm btn-danger' do %>
                      <i class="bi bi-trash"></i> Eliminar
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">No hay calificaciones registradas para este estudiante.</div>
  <% end %>

  <%= link_to 'Volver al listado', admin_grades_path, class: 'btn btn-secondary mt-3' %>
</div>