<div class="container">
  <h1 class="my-4 text-center text-md-start">Cursos</h1>
  
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-2">
    <%= link_to 'Nuevo Curso', new_admin_course_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>Nombre</th>
          <th>Estudiantes</th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.users.count %></td>
            <td class="text-center" style="white-space: nowrap;">
              <div class="d-flex flex-wrap justify-content-center gap-1">
                <%= link_to 'Ver', admin_course_path(course), class: 'btn btn-sm btn-info' %>
                <%= link_to 'Editar', edit_admin_course_path(course), class: 'btn btn-sm btn-warning' %>
                <%= button_to 'Eliminar', 
                    admin_course_path(course), 
                    method: :delete,
                    form: { 
                      data: { 
                        turbo_confirm: '¿Estás seguro de eliminar este curso?' 
                      },
                      class: 'd-inline' 
                    }, 
                    class: 'btn btn-sm btn-danger' %>
                <%= link_to 'Asistencia', take_attendance_admin_course_path(course), class: 'btn btn-sm btn-success' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
