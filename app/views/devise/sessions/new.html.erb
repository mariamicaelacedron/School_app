<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center py-3">
          <h2 class="mb-0">
            <i class="bi bi-box-arrow-in-right me-2"></i>
            Iniciar sesión
          </h2>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-envelope"></i>
                </span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                                 class: "form-control", placeholder: "tu@email.com", required: true %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Contraseña", class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-lock"></i>
                </span>
                <%= f.password_field :password, autocomplete: "current-password", 
                                     class: "form-control", placeholder: "••••••••", required: true %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Recordar mi sesión", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2 mb-3">
              <%= f.submit "Iniciar sesión", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>