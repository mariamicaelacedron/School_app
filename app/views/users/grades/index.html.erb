<div class="container">
  <h1 class="mb-4"><%= current_user.admin? ? 'Todas las Calificaciones' : 'Mis Calificaciones' %></h1>
  
  <% if @grades.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Estudiante</th>
            <th>Asignatura</th>
            <th>Nota</th>
            <th>Comentario</th>
            <th>Profesor</th>
          </tr>
        </thead>
        <tbody>
          <% @grades.each do |grade| %>
            <tr>
              <td><%= grade.student.email %></td>
              <td><%= grade.subject %></td>
              <td><%= grade.score %></td>
              <td><%= grade.comment %></td>
              <td><%= grade.admin.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      No hay calificaciones registradas.
    </div>
  <% end %>
</div>