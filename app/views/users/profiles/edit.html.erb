<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>Editar Perfil</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: users_profile_path, local: true, html: { multipart: true } do |f| %>
            <div class="mb-3">
              <%= f.label :avatar, "Foto de perfil (Max 5MB, JPEG/PNG/GIF)", class: "form-label" %>
                      
              <% if @user.avatar.attached? && @user.avatar.persisted? %>
                <div class="mb-2">
                  <%= image_tag @user.avatar.variant(:medium), class: "img-thumbnail d-block mb-2" %>
                  <div class="form-check">
                    <%= f.check_box :remove_avatar, class: 'form-check-input' %>
                    <%= f.label :remove_avatar, "Eliminar foto actual", class: 'form-check-label text-danger' %>
                  </div>
                </div>
              <% end %>
                      
              <%= f.file_field :avatar, accept: "image/jpeg,image/png,image/gif", class: "form-control #{'is-invalid' if @user.errors[:avatar].any?}" %>
              
              <% if @user.errors[:avatar].any? %>
                <div class="invalid-feedback d-block">
                  <%= @user.errors[:avatar].to_sentence %>
                </div>
              <% end %>
              
              <div class="form-text">La imagen será recortada a formato cuadrado.</div>
            </div>
            
            <div class="mb-3">
              <%= f.label :name, "Nombre completo", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :email, "Correo electrónico", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :description, "Descripción", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 4 %>
            </div>
            
            <div class="d-grid gap-2">
              <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
              <%= link_to "Cancelar", users_profile_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>