<div class="card">
  <div class="card-header">
    <h1 class="h3 mb-0">Resumen de la semana del <%= @summary.week_start.strftime("%d %b %Y") %></h1>
  </div>
  
  <div class="card-body">
    <div class="mb-4">
      <h2 class="h5">Actividades realizadas</h2>
      <div class="p-3 bg-light rounded">
        <%= simple_format(@summary.activities) %>
      </div>
    </div>
    
    <div class="mb-4">
      <h2 class="h5">Participación</h2>
      <p><span class="badge <%= @summary.participated ? 'bg-success' : 'bg-warning' %>">
        <%= @summary.participated ? "Participó activamente" : "No participó" %>
      </span></p>
    </div>
    
    <div class="mb-4">
      <h2 class="h5">Observaciones del profesor</h2>
      <div class="p-3 bg-light rounded">
        <%= simple_format(@summary.remarks) %>
      </div>
    </div>
  </div>
  
  <div class="card-footer">
    <%= link_to "Volver a mis resúmenes", users_summaries_path, class: "btn btn-light" %>
  </div>
</div>